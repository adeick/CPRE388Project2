<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/bitcoinCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/bitcoinCountText"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="84dp"
        android:onClick="mainframeOnClick"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bitcoinCountTextView">

        <Button
            android:id="@+id/upgradeStorageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="upgradeStorageOnClick"
            android:text="Upgrade Storage" />

        <Button
            android:id="@+id/buyServerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="towerServerOnClick"
            android:text="Buy Server" />

        <Button
            android:id="@+id/buyMicroprocessorButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="towerMicroProcessorOnClick"
            android:text="Buy Microprocessor" />

        <Button
            android:id="@+id/buyGPUButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="towerGPUOnClick"
            android:text="Buy GPU" />

        <Button
            android:id="@+id/buyQuantumButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="towerQuantumComputerOnClick"
            android:text="Buy Quantum Computer" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>